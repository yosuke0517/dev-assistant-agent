<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- サービス識別名 -->
    <key>Label</key>
    <string>com.finegate.cloudflared</string>

    <!-- 実行コマンド: caffeinate -s でスリープ防止しながら cloudflared を起動 -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/caffeinate</string>
        <string>-s</string>
        <string>/opt/homebrew/bin/cloudflared</string>
        <string>tunnel</string>
        <string>run</string>
        <string>agent</string>
    </array>

    <!-- 環境変数 -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>

    <!-- ログイン時に自動起動 -->
    <key>RunAtLoad</key>
    <true/>

    <!-- クラッシュ時に自動再起動 -->
    <key>KeepAlive</key>
    <true/>

    <!-- 再起動間隔（秒） -->
    <key>ThrottleInterval</key>
    <integer>10</integer>

    <!-- 標準出力ログ -->
    <key>StandardOutPath</key>
    <string>/Users/takeuchiyosuke/Library/Logs/finegate/cloudflared.stdout.log</string>

    <!-- 標準エラーログ -->
    <key>StandardErrorPath</key>
    <string>/Users/takeuchiyosuke/Library/Logs/finegate/cloudflared.stderr.log</string>

    <!-- プロセスタイプ: バックグラウンド -->
    <key>ProcessType</key>
    <string>Standard</string>
</dict>
</plist>
